/* pages/tabBar/category/index.wxss */
page {
  height: 100vh;
}
.category_container {
  height: 100%;
  display: flex;
}
.category_container .left_container {
  flex: 2;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #f0f0f0;
}
.category_container .left_container .left_list {
  border-bottom: 1px solid #e8e8e8;
  border-left: 10rpx solid transparent;
  box-sizing: border-box;
}
.category_container .left_container .left_list.actived {
  color: var(--themeColor);
  border-left: 10rpx solid var(--themeColor);
  box-sizing: border-box;
}
.category_container .right_container {
  flex: 5;
  text-align: center;
  font-size: 36rpx;
}
.category_container .right_container .title {
  line-height: 100rpx;
}
.category_container .right_container .flexBtn {
  display: flex;
  flex-wrap: wrap;
}
.category_container .right_container .flexBtn .image {
  width: 100%;
  height: 160rpx;
}
.category_container .right_container .flexBtn .text {
  line-height: 40rpx;
  font-size: 30RPX;
}
.category_container .right_container .flexBtn .li_box {
  width: 30%;
  text-align: center;
  margin-right: 20rpx;
}
.category_container .right_container .flexBtn .li_box:nth-child(3n) {
  margin: 0;
}
.category_container .right_container .flexBtn .li_box .image {
  width: 100%;
  height: 160rpx;
}
.category_container .right_container .flexBtn .li_box .text {
  line-height: 40rpx;
  font-size: 30RPX;
}
