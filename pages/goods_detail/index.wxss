/* pages/goods_detail/index.wxss */
.swiper_container {
  padding: 0 10rpx;
  box-sizing: border-box;
}
.swiper_container .swiper_item {
  width: 100%;
  height: 400rpx;
}
.swiper_container .swiper_item .img {
  display: block;
  width: 60%;
  height: 100%;
  margin: 0 auto;
}
.swiper_container .swiper_item .navigator {
  width: 100%;
  height: 100%;
}
.detail_container {
  padding: 10rpx;
  box-sizing: border-box;
}
.detail_container .price {
  line-height: 60rpx;
  font-size: 36rpx;
  color: red;
  font-weight: bold;
}
.detail_container .flex_container {
  display: flex;
  padding: 10rpx 0;
}
.detail_container .flex_container .name {
  flex: 6;
  line-height: 40rpx;
  font-size: 28rpx;
  border-right: 4rpx solid #f0f0f0;
}
.detail_container .flex_container .collect {
  flex: 2;
  text-align: center;
}
.detail_container .line {
  width: 100%;
  height: 18rpx;
  line-height: 18rpx;
  background-color: #f0f0f0;
}
.detail_container .detail_image {
  padding-bottom: 110rpx;
}
.detail_container .detail_image .title {
  line-height: 80rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: red;
}
.cart_container {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100vw;
  height: 100rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  text-align: center;
}
.cart_container .item {
  flex: 3;
  font-size: 26rpx;
}
.cart_container .item_cart {
  flex: 5;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.cart_container .item_cart.cart {
  background-color: #ff9100;
}
.cart_container .item_cart.buy {
  background-color: rgba(255, 0, 0, 0.782);
}
